- content_for :title, "Add peripheral for #{@item.name}"

%section.section
  .container.is-fluid.has-text-centered
    %h3.title Add peripheral for #{@item.name}

    .columns
      .column.is-3.is-offset-3
        .card
          .card-content
            %p.subtitle Choose from an existing asset
          %footer.card-footer
            %p.card-footer-item
              = link_to 'Choose', choose_peripheral_item_path, class: 'button is-link'
      .column.is-3
        .card
          .card-content
            %p.subtitle Create a new asset
          %footer.card-footer
            %p.card-footer-item
              = link_to 'Create', new_item_path(item_id: @item.id, is_peripheral: true), class: 'button is-primary'